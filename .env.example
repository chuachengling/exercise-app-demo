# OpenAI API (for GPT-4 recipe generation)
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for Stable Diffusion image generation)
# Get your token from: https://huggingface.co/settings/tokens
NEXT_PUBLIC_HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Unsplash API (for food stock photos - fallback option)
# Get your access key from: https://unsplash.com/oauth/applications
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Replicate API (alternative for Stable Diffusion - optional)
# Get your token from: https://replicate.com/account
NEXT_PUBLIC_REPLICATE_API_TOKEN=your_replicate_token_here
